Polinomio operator*(const Polinomio& p1, const Polinomio& p2)
{ // funzione esterna, friend, della classe Polinomio
  Polinomio p;
  int i, j;

  p.max = p1.max + p2.max;
  p.v = new double[p.max + 1];
  
  for (i = 0; i <= p.max; i++)
    p.v[i] = 0.0;

  for (i = 0; i <= p1.max; i++)
    for (j = 0; j <= p2.max; j++)
      p.v[i+j] += p1.v[i] * p2.v[j];

  return p;
}
